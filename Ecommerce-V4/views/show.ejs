<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/star.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
 <body>
    
    
 <%-include('./flash.ejs') %>
    <h1>Display a particular product</h1>

   

    <section class="row">

    <div class="col-6 border">

    <h1><%=foundProduct.name%></h1>
    <img src="<%=foundProduct.img%>" alt="">
    <h2><%=foundProduct.price%></h2>
    <p><%=foundProduct.desc%></p>
    </div>

    <div class="col-6 border">
        <h1>Rating form</h1>
        
        <form action="/products/<%=foundProduct._id%>/rating" method="post">
        <label for="star">Rating</label>
        <!-- <input type="range" min="0" max="5" name="rating" id=""> -->
        <fieldset class="starability-basic">
            <legend>First rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        <br>
        <label for="textt">Rating:</label>
        <textarea name="comment" id="textt" rows="3"></textarea>
        <button type="submit">Add Review</button>
        </form>
    </div>
    <div class="border">
        <% for(let review of foundProduct.reviews){ %>
            <h2>Rating: </h2>
            <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%=review.rating%>
              </p>
            <h5>Comment: <%=review.comment%></h5>
            <!-- <h3>Tine: <%=review.createdAt%></h3> -->
             <%if(review.createdAt){%>
                <h5>Tine: <%=review.createdAt.toDateString()%></h5>

             <%}%>

        <%}%>
    </div>

   </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>